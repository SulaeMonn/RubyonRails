<div class="card">
  <div class="card-header bg-success text-white">
    User Detail
  </div>
  <div class="card-body">
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Profile</label>
        <div class="col-sm-10">
            <label for="staticEmail" class="col-sm-10 col-form-label"><%= image_tag @user.profile, style: "width: 250px; display: block" %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <label for="staticEmail" class="col-sm-10 col-form-label"><%= @user.name %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <label for="staticEmail" class="col-sm-10 col-form-label"><%= @user.email %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Type</label>
        <div class="col-sm-10">
            <label for="staticEmail" class="col-sm-10 col-form-label"><%= @user.role %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-10">
            <label for="staticEmail" class="col-sm-10 col-form-label"><%= @user.phone %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Date of Birth</label>
        <div class="col-sm-10">
            <label for="staticEmail" class="col-sm-10 col-form-label"><%= @user.dob %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
            <label for="staticEmail" class="col-sm-10 col-form-label"><%= @user.address %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Created Date</label>
        <div class="col-sm-10">
            <label for="staticEmail" class="col-sm-10 col-form-label"><%= @user.created_at.strftime('%Y/%m/%d') %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Created User</label>
        <div class="col-sm-10">
            <label for="staticEmail" class="col-sm-10 col-form-label"><%= @user.create_user_id %></label>
        </div>
    </div>
    <div>
        <%= button_to "Back", users_path, method: :get, class: "btn btn-success"%>
    </div>
  </div>
</div>
