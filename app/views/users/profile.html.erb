<div class="card">
    <div class="card-header bg-success text-white">
        Profile
    </div>
    <div class="card-body">
        <div class="form-group row">
            <div class="col-sm-10">
                <label for="staticEmail" class="col-sm-10 col-form-label"><%= image_tag current_user.profile, style: "width: 250px; display: block" %></label>
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <label for="staticEmail" class="col-sm-10 col-form-label"><%= current_user.name %></label>
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <label for="staticEmail" class="col-sm-10 col-form-label"><%= current_user.email %></label>
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Type</label>
            <div class="col-sm-10">
                <label for="staticEmail" class="col-sm-10 col-form-label"><%= current_user.role %></label>
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Phone</label>
            <div class="col-sm-10">
                <label for="staticEmail" class="col-sm-10 col-form-label"><%= current_user.phone %></label>
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Date of Birth</label>
            <div class="col-sm-10">
                <label for="staticEmail" class="col-sm-10 col-form-label"><%= current_user.dob %></label>
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                <label for="staticEmail" class="col-sm-10 col-form-label"><%= current_user.address %></label>
            </div>
        </div>
        <div>
          <%= link_to "Edit Account", edit_user_path(current_user), class: "btn btn-success" %>
          <%= link_to "Delete Account", user_path(current_user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-success" %>
        </div>
    </div>
</div>