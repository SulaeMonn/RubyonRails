<div class="card">
  <div class="card-header">
    Create Post
  </div>
  <div class="card-body">
    <%= form_with model: @post, url:"/post/createConfirm" do |form| %>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label :title %> </div>
        <div class="col-md-6"><%= form.text_field :title %>
          <% if @post.errors[:title].any? %>
              <% @post.errors[:title].each do |message| %>
                <div class="text-danger">
                  <%= message %>
                </div>
              <% end %>
          <% end %>
        </div>
      </div>
    <br/>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label :description %> </div>
        <div class="col-md-6"> <%= form.text_area :description %> 
          <% if @post.errors[:description].any? %>
              <% @post.errors[:description].each do |message| %>
                <div class="text-danger">
                  <%= message %>
                </div>
              <% end %>
          <% end %>        
        </div>
    </div>
    <br/>
    <div class="form-group row mb-0">
	  <div class="col-md-3 offset-md-2">
      <%= form.submit :type =>"submit", class: "btn btn-success" %>
      <%= button_tag "Clear", type: :reset, class: "btn btn-success" %>
	  </div>
    <% end %>
  </div>
</div>